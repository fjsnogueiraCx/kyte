{
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "cd packages/kyte && npm run build",
    "cz": "git-cz",
    "format": "prettier --write '**/*.js{on,}'",
    "precommit": "lint-staged",
    "release":
      "lerna publish --conventional-commits -m 'chore(release): publish %s'"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.14.3",
    "lerna": "^2.4.0",
    "lint-staged": "^4.2.1",
    "prettier": "^1.7.0",
    "webpack": "^3.7.1"
  },
  "lint-staged": {
    "*.js": ["prettier --write", "git add"]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
