{
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna clean",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "cz": "commit",
    "format": "prettier --write '**/*.js{on,}'",
    "precommit": "lint-staged",
    "release":
      "npm run build && lerna publish -m 'chore(release): Publishing release(s)'"
  },
  "commitlint": {
    "extends": ["@commitlint/config-angular"]
  },
  "lint-staged": {
    "*.js{on,}": ["prettier --write", "git add"]
  },
  "devDependencies": {
    "@commitlint/cli": "^5.2.3",
    "@commitlint/config-angular": "^5.1.1",
    "@commitlint/prompt-cli": "^5.2.0",
    "babel-preset-env": "^1.6.1",
    "husky": "^0.14.3",
    "lerna": "^2.5.1",
    "lint-staged": "^6.0.0",
    "parcel-bundler": "parcel-bundler/parcel",
    "prettier": "^1.9.1"
  }
}
