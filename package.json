{
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna clean",
    "cz": "git-cz",
    "format": "prettier --write '**/*.js{on,}'",
    "precommit": "lint-staged",
    "release": "lerna publish -m 'chore(release): Publishing release(s)'"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.1",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.14.3",
    "lerna": "^2.4.0",
    "lint-staged": "^4.3.0",
    "prettier": "^1.7.0",
    "webpack": "^3.8.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.js{on,}": ["prettier --write", "git add"]
  }
}
