{
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "cd packages/kyte && npm run build",
    "format": "prettier --write '**/*.js{on,}'",
    "postinstall": "npm run build && cd packages/kyte; yarn unlink; yarn link",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-env": "^1.6.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.1",
    "prettier": "^1.7.0",
    "webpack": "3.3.0"
  },
  "lint-staged": {
    "*.js": ["prettier --write", "git add"]
  }
}
